<div class="backdrop"></div>
<header class="main-header">
    <a href="/" class="main-header__logo">
        <img src="/images/logo-white.png" alt="" class="main-header__logo">
        <span>TICS</span>
    </a>
    <button id="side-menu-toggle">
        <img src="/images/open-menu.png" alt="">
    </button>
    <nav class="main-header__nav">
        <ul class="main-header__item-list">
            <li class="main-header__item">
                <a class="<%= path === '/products' ? 'active' : '' %>" href="/products">Products</a>
            </li>
            <% if(isLoggedIn){%>
            <li class="main-header__item">
                <a class="<%= path === '/cart' ? 'active' : '' %>" href="/cart">Cart</a>
            </li>
            <li class="main-header__item">
                <a class="<%= path === '/orders' ? 'active' : '' %>" href="/orders">Orders</a>
            </li>
            <li class="main-header__item">
                <%if(!isAdmin){%>
                    <img src="/images/lock.png" alt="lock" style="max-width: 18px;">
                <%}%>
                <a class="<%= path === '/admin/products' ? 'active' : '' %>" href="/admin/products">Admin
                </a>
            </li>
            <%}%>

        </ul>
        <ul class="main-header__item-list">
            <% if(isLoggedIn){ %>
                <li class="main-header__item">
                    <form action="/logout" method="post">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <button type="submit">Logout</button>
                    </form>
                </li>
            <% } else { %>
                <li class="main-header__item">
                    <a class="<%= path === '/login' ? 'active' : '' %>"  href="/login">Login</a>
                </li>
                <li class="main-header__item">
                    <a class="<%= path === '/signup' ? 'active' : '' %>"  href="/signup">Signup</a>
                </li>
            <% }%>
        </ul>
    </nav>
</header>

<nav class="mobile-nav">
    <% if(isLoggedIn){%>
        <p>Welcome <%= userEmail %></p>
    <%}%>
    <ul class="mobile-nav__item-list">
        <li>
            <a href="/">
                <div class="mobile-nav__logo-wrapper">
                    <img src="/images/logo-color.png" alt="" class="main-header__logo">
                    <p class="mobile-nav__logo-text">The Ice Cream Shop</p>
                </div>
            </a>
        </li>
        <li class="mobile-nav__item">
            <a class="<%= path === '/products' ? 'active' : '' %>" href="/products">Products</a>
        </li>
        <% if(isLoggedIn){%>
        <li class="mobile-nav__item">
            <a class="<%= path === '/cart' ? 'active' : '' %>" href="/cart">Cart</a>
        </li>
        <li class="mobile-nav__item">
            <a class="<%= path === '/orders' ? 'active' : '' %>" href="/orders">Orders</a>
        </li>
        <li class="mobile-nav__item">
            <a class="<%= path === '/admin/products' ? 'active' : '' %>" href="/admin/products">Admin
                <%if(!isAdmin){%>
                    <img src="/images/lock.png" alt="lock" style="max-width: 18px;">
                <%}%>
            </a>
        </li>
        <% }%>
    </ul>
    <ul class="mobile-nav__item-list">
        <% if(isLoggedIn){ %>
            <li class="mobile-nav__item"">
                <form action="/logout" method="post">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit">Logout</button>
                </form>
            </li>
        <% } else { %>
            <li class="mobile-nav__item"">
                <a class="<%= path === '/login' ? 'active' : '' %>"  href="/login">Login</a>
            </li>
            <li class="mobile-nav__item"">
                <a class="<%= path === '/signup' ? 'active' : '' %>"  href="/signup">Signup</a>
            </li>
        <% }%>
    </ul>
</nav>