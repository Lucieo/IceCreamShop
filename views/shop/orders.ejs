<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/orders.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (orders.length <= 0) { %>
                <div class='centered'>
                    <h2>What a shame!</h2>
                    <p>It seems you haven't had the chance to order anything yet...</p>
                    <div class="centered">
                        <a href="/products">
                            <button class="btn">Let's fix this!</button>
                        </a>
                    </div>
                    <div class="centered">
                        <img src="/images/jar.png" alt="jar" class="orders__no-orders">
                    </div>
                </div>
            <% } else { %>
                <ul class="orders">
                    <% orders.forEach(order => { %>
                        <li class="orders__item">
                            <h1>Order - # <%= order._id %></h1>
                            <p>                <a href="/orders/<%=order._id%>">Invoice</a></p>
                            <ul class="orders__products">
                                <% order.products.forEach(p => { %>
                                    <li class="orders__products-item"><%= p.product.title %> (<%= p.quantity %>)
                                        -
                                    <%= p.product.price*p.quantity %>$
                                    </li>
                                <% }); %>
                            </ul>
                        </li>
                    <% }); %>
                </ul>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>