<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <h2 class="centered">Nice to see you again!</h2>
        <div class="login__wrapper">
            <% if(errorMessage){%>
                <div class="user-message user-message--error"><%=errorMessage%></div>
            <%}%>
            <form class="login-form" action="/login" method="POST">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="form-control">
                    <label for="email">Email</label>
                    <input 
                    class="<%= validationErrors.find(error=> error.param==='email') ? 'invalid' : ''%>"
                    type="email" 
                    name="email" 
                    id="email"
                    value="<%= oldInput.email%>">
                </div>
                <div class="form-control">
                    <label for="password">Password</label>
                    <input 
                    class="<%= validationErrors.find(error=> error.param==='password') ? 'invalid' : ''%>"
                    type="password" 
                    name="password" 
                    id="password"
                    value="<%= oldInput.email%>">
                </div>
                <div class="centered">
                    <button class="btn" type="submit">
                        Login
                    </button>
                </div>
            </form>
            <div class="centered sign-in__reset-password">
                <a href="/reset-password">Oupsy did you forget your password?</a>
                <p class="sign-in__additional-info">(an email with a link will be sent to you)</p>
            </div>
        </div>
    </main>
<%- include('../includes/end.ejs') %>